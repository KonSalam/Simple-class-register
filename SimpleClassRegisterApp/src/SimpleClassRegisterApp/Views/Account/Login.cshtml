@model SimpleClassRegisterApp.ViewModels.LoginViewModel
@section Scripts {
    <link rel="stylesheet" href="~/css/Account/account.css" />
}

<div class="container">

    <div class="page-header">
        <h3 class="text-center">Login form</h3>
    </div>

    <form class="form-horizontal" asp-action="Login">

        <div class="form-group">
            <label class="control-label col-sm-4" asp-for="EmailAddress"></label>
            <div class="col-sm-8">
                <input type="email" asp-for="EmailAddress" placeholder="Enter email" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger field-validation-error"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" asp-for="Password"></label>
            <div class="col-sm-8">
                <input type="password" asp-for="Password" placeholder="Enter password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger field-validation-error"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" asp-for="RememberMe"></label>
            <div class="col-sm-8">
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe" class="text-danger field-validation-error"></span>
                <span class="text-danger field-validation-error">@Html.ValidationMessage("LoginError")</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </div>

    </form>

    <br />
    <div class="container">
        <label class="not_register col-sm-4">Not Registered?</label>
        <div class="col-sm-8">
            <a asp-action="SignUp">Create a new account</a>
        </div>
    </div>

</div>