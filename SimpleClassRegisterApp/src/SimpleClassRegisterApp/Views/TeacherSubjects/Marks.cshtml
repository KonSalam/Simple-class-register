@model SimpleClassRegisterApp.ViewModels.TeacherMarksViewModel

@section Scripts {
    <link rel="stylesheet" href="~/css/Teacher/teacherClasses.css" />
    <script src="~/scripts/TeacherScripts/ClassChoice.js"></script>
}

<div class="container">

    <div class="page-header">
        <h3 class="text-center">Choose your course:</h3>
    </div>

    <form class="form-inline">

        <div class="form-group">
            <label class="control-label col-sm-4" asp-for="Class"></label>
            <div class="col-sm-8">
                <select asp-for="Class"  id="class_list" class="form-control">
                    @foreach (var schoolClass in Model.Classes)
                    {
                        @if (Model.Teacher.TeachersSubjectsClasses.Any(x => x.ClassID == schoolClass.ClassID))
                        {
                            <option value="@schoolClass.Identification">@schoolClass.Identification</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" asp-for="Subject"></label>
            <div class="col-sm-8">
                <select asp-for="Subject" id="subject_list" class="form-control">
                   
                </select>
            </div>
        </div>

    </form>


</div>